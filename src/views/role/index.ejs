<div class="container-fluid px-4">
    <h1 class="mt-4">Roles</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="#" class="addbtn">Dashboard</a></li>
        <li class="breadcrumb-item active">Roles</li>
    </ol>
    <%- include('../partials/message') %>
    <div class="card mb-4">
        <!-- <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Users
        </div> -->
        <div id="card-body" class="card-body">
            <button type="button" class="btn btn-primary btn-header" data-bs-toggle="modal" data-bs-target="#addModal">
                Añadir rol
            </button>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Descripción</th>
                    </tr>
                </tfoot>
                <tbody>
                    <% for (let role of roles) { %>
                        <tr>
                            <td><%= role.descripcion %></td>
                            <td>
                                <button data-id="<%= role.id %>" data-name="role" type="button" class="btn btn-primary editbtn" data-bs-toggle="modal" data-bs-target="#editModal">
                                    Editar
                                </button>
                                
                            </td>
                            <td>
                                <a href="/role/delete/<%= role.id %>" data-id="<%= role.id %>" data-name="role" class="btn btn-danger btn-delete">Eliminar</a>
                            </td>
                        </tr>
                    <% } %> 
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="/js/crud.js"></script>
<%- include('./add_modal', functions) %>

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Editar rol</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="editModalBody" class="modal-body">
                
            </div>
        </div>
    </div>
</div>