<div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addModalLabel">Añadir caso</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/casos/add" method="POST">
              <div class="mb-3">
                <select class="form-select" name="type" aria-label="Default select example"> 
                    <option selected>Tipo de Caso</option>
                    <% for (let type of types) { %>
                    <option value="<%= type.id %>"><%= type.tipo %></option>
                    <% } %> 
                </select>
              </div>
              <div class="mb-3">
                <input class="form-control" name="user" list="datalistOptions" id="exampleDataList" placeholder="Cliente">
                <datalist id="datalistOptions">
                  <% for (let user of users) { %>
                  <option value="<%= user.id %>"><%= user.nombre %></option>
                  <% } %>
                </datalist>
              </div>
              <div class="mb-3">
                <input type="text" class="form-control" name="subject" placeholder="Asunto">
              </div>
              <div class="mb-3">
                <textarea type="text" class="form-control" name="description" placeholder="Descripción"></textarea>
              </div>
              <div class="mb-3">
                <button class="btn btn-success btn-block" data-bs-dismiss="modal">
                  Guardar
                </button>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModaluser">
                  Añadir usuario
                </button>
              </div>
            </form>
        </div>
      </div>
    </div>
</div>
<%- include('../user/add_modal', roles) %>