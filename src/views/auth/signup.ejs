<div class="container p-4">
    <div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
        <div class="card-header">
            <h3>SignUp</h3>
        </div>
        <div class="card-body">
            <form action="/signup" method="POST">
            <div class="mb-3">
                <input type="text" name="nit" placeholder="NIT" class="form-control">
            </div>
            <div class="mb-3">
                <input type="type" name="fullname" placeholder="Nombre" class="form-control" autofocus>
            </div>
            <div class="mb-3">
                <input type="text" name="email" placeholder="Correo electrónico" class="form-control">
            </div>
            <div class="mb-3">
                <input type="password" name="password" placeholder="Contraseña" class="form-control">
            </div>
            <div class="mb-3">
                <input type="text" name="cellphone" placeholder="Celular" class="form-control">
            </div>
            <div class="mb-3">
                <input type="text" name="identity" placeholder="Carnet de Identidad" class="form-control">
            </div>
            <div class="mb-3">
                <button class="btn btn-success btn-block">
                SingUp
                </button>
                <a href="/signin" class="btn btn-block">
                SingIn
                </a>
            </div>
            </form>
        </div>
        </div>
    </div>
    </div>
</div>