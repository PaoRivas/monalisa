<div class="container-fluid px-4">
    <h1 class="mt-4">Usuarios/Clientes</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
        <li class="breadcrumb-item active">Usuarios</li>
    </ol>
    <%- include('../partials/message') %>
    <div class="card mb-4">
        <!-- <div class="card-header">
            <i class="fas fa-table me-1"></i>
            DataTable Users
        </div> -->
        <div id="card-body" class="card-body">
            <button type="button" class="btn btn-primary btn-header" data-bs-toggle="modal" data-bs-target="#addModaluser">
                Añadir usuario
            </button>
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Rol</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Celular</th>
                        <th>Carnet de identidad</th>
                        <th>Sucursal</th>
                        <th>Numero Documento</th>
                        <th>Razón Social</th>
                        <!-- <th>Cambio de contraseña</th>
                        <th>Creado</th>
                        <th>Creador</th>
                        <th>Modificado</th>
                        <th>Modificador</th> -->
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Rol</th>
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Celular</th>
                        <th>Carnet de identidad</th>
                        <th>Sucursal</th>
                        <th>Numero Documento</th>
                        <th>Razón Social</th>
                        <!-- <th>Cambio de contraseña</th>
                        <th>Creado</th>
                        <th>Creador</th>
                        <th>Modificado</th>
                        <th>Modificador</th> -->
                    </tr>
                </tfoot>
                <tbody>
                    <% for (let user of users) { %>
                        <tr>
                            <td><%= user.rol %></td>
                            <td><%= user.nombre %></td>
                            <td><%= user.email %></td>
                            <td><%= user.celular %></td>
                            <td><%= user.c_identidad %></td>
                            <td><%= user.sucursal %></td>
                            <td><%= user.numero_documento %></td>
                            <td><%= user.razon_social %></td>
                            <!-- <td><%= user.fecha_password.toLocaleString() %></td>
                            <td><%= user.creado.toLocaleString() %></td>
                            <td><%= user.userC %></td>
                            <td><%= user.modificado.toLocaleString() %></td>
                            <td><%= user.userM%></td> -->
                            <td>
                                <a href="/usuarios/casos/<%= user.id %>" class="btn btn-primary">Casos</a>
                            </td>
                            <td>
                                <button data-id="<%= user.id %>" data-name="usuarios" type="button" class="btn btn-primary editbtn" data-bs-toggle="modal" data-bs-target="#editModal">
                                    Editar
                                </button>
                            </td>
                            <td>
                                <button data-id="<%= user.id %>" data-name="usuarios" type="button" class="btn btn-danger btn-delete">Eliminar</button>
                            </td>
                        </tr>
                    <% } %> 
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="/js/crud.js"></script>
<script src="/js/user.js"></script>
<%- include('./add_modal', roles, sucursales, tipos) %>
<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addModalLabel">Editar usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="editModalBody" class="modal-body">

            </div>
        </div>
    </div> 
</div>