<div class="container-fluid px-4">
  <h1 class="mt-4">Sucursales</h1>
  <ol class="breadcrumb mb-4">
      <li class="breadcrumb-item"><a href="/">Inicio</a></li>
      <li class="breadcrumb-item active">Sucursal</li>
  </ol>
  <%- include('../partials/message') %>
  <div class="card mb-4">
      <!-- <div class="card-header">
          <i class="fas fa-table me-1"></i>
          DataTable Users
      </div> -->
      <div class="card-body">
          <button type="button" class="btn btn-primary btn-header" data-bs-toggle="modal" data-bs-target="#addModal">
              Añadir sucursal
          </button>
          <table id="datatablesSimple">
              <thead>
                    <tr>
                        <th>Número</th>
                        <th>Nombre</th>
                        <th>Municipio</th>
                        <th>Teléfono</th>
                        <th>Creado</th>
                        <th>CUIS</th>
                        <th>Vigencia CUIS</th>
                    </tr>
              </thead>
              <tfoot>
                    <tr>
                        <th>Número de sucursal</th>
                        <th>Nombre</th>
                        <th>Municipio</th>
                        <th>Teléfono</th>
                        <th>Creado</th>
                        <th>CUIS</th>
                        <th>Vigencia CUIS</th>
                    </tr>
              </tfoot>
              <tbody>
                  <% for (let resultado of resultados) { %>
                        <tr>
                            <td><%= resultado.numero %></td>
                            <td><%= resultado.nombre %></td>
                            <td><%= resultado.municipio %></td>
                            <td><%= resultado.telefono %></td>
                            <td><%= resultado.creado.toLocaleString() %></td>
                            <td><%= resultado.codigo %></td>
                            <td><%= resultado.vigencia.toLocaleString() %></td>
                            <td>
                                <button data-id="<%= resultado.id %>" data-name="sucursales" type="button" class="btn btn-primary editbtn" data-bs-toggle="modal" data-bs-target="#editModal">
                                    Editar
                                </button>
                            </td>
                            <td>
                                <button data-id="<%= resultado.id %>" data-name="sucursales" type="button" class="btn btn-danger btn-delete">Eliminar</button>
                            </td>
                        </tr>
                  <% } %> 
              </tbody>
          </table>
      </div>
  </div>
</div>
<script src="/js/crud.js"></script>
<%- include('./add_modal') %>

<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="addModalLabel">Editar sucursal</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div id="editModalBody" class="modal-body">
              
          </div>
      </div>
  </div>
</div>