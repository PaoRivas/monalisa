<div class="container-fluid px-4">
  <div class="card mb-4 mt-4">
      <!-- <div class="card-header">
          <i class="fas fa-table me-1"></i>
          DataTable Users
      </div> -->
      <div id="card-body" class="card-body">
        <button data-id="<%= caso?.id %>" type="button" class="btn btn-primary btn-header upldbtn" data-bs-toggle="modal" data-bs-target="#uploadModal">
          Cargar Documento
        </button>
          <table id="datatablesSimple">
              <thead>
                  <tr>
                    <th>Fecha creación</th>
                    <th>Actividad</th>
                    <th>Fecha próximo paso</th>
                    <th>Próximo paso</th>
                  </tr>
              </thead>
              <tfoot>
                  <tr>
                    <th>Fecha creación</th>
                    <th>Actividad</th>
                    <th>Fecha próximo paso</th>
                    <th>Próximo paso</th>
                  </tr>
              </tfoot>
              <tbody>
                  <% for (let activity of activities) { %>
                      <tr>
                          <td><%= activity.fecha.toLocaleString() %></td>
                          <td><%= activity.actividad %></td>
                          <td><%= activity.fecha_proximo.toLocaleString() %></td>
                          <td><%= activity.proximo_paso %></td>
                          <td>
                              <button data-id="<%= activity.id %>" data-name="user" type="button" class="btn btn-primary editbtn" data-bs-toggle="modal" data-bs-target="#editModal">
                                  Editar
                              </button>
                              
                          </td>
                          <td>
                              <a data-id="<%= activity.id %>" data-name="user" class="btn btn-danger btn-delete">Eliminar</a>
                          </td>
                      </tr>
                  <% } %> 
              </tbody>
          </table>
      </div>
  </div>
</div>

<%- include('./upload_modal') %>
<script src="/js/upload.js"></script>
<script src="/js/crud.js"></script>
